#include "main.h"

/**
* print_diagonal - a function that draws a diagonal line on the terminal.
* @n: the number of time '\' should be printed
* Return: void.
*/

void print_diagonal(int n)
{
	int i, j;

	i = 0;
	while (i < n)
	{
		for (j = 0; j < i; j++)
		{
			_putchar(' ');
		}
		if (j == i)
		{
			_putchar('\\');
			_putchar('\n');
		}
		i++;
	}
	if (i <= 0)
	{
		_putchar('\n');
	}

}
