#include "main.h"

/**
 * puts2 -  a function that prints every other character of a string.
 * @str: pointer to the first character of a string
 * Return: void
 */

void puts2(char *str)
{
	int count;
	count = 0;
	while (*str != '\0')
	{
		if (count % 2 == 0)
		{
			_putchar(*str);
		}
		str++;
		count++;
	}
	_putchar('\n');
}
